---
import Base from "../../layouts/Base.astro";
import TopicsList from "../../components/TopicsList.astro";
import ThoughtsList from "../../components/ThoughtsList.astro";

import { getCollection } from "astro:content";
import Breadcrumb from "../../components/Breadcrumb.astro";

const thoughts = (await getCollection('thoughts'));
---

<Base pageTitle="Thoughts">
    <Breadcrumb thoughtsLevel />
    <h1 class="text-stone-800 font-bold my-3 l:my-5 text-center text-2xl md:text-3xl l:text-4xl">Thoughts</h1>
    <section class="my-3">
        <a class="my-2" href="/thoughts/topics"><h2 class="underline text-lime-800 hover:text-lime-600 transition-all text-xl md:text-2xl l:text-3xl">Topics</h2></a>
        <h3 class="my-2 text-l md:text-xl l:text-2xl">Top</h3>
        <TopicsList topOnly/>
    </section>
    <section class="my-3">
        <h2 class="text-xl md:text-2xl l:text-3xl my-2">All Thoughts</h2>
        <ThoughtsList thoughts={thoughts}/>
    </section>
</Base>